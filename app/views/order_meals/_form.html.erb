        <div class="form-group">
            <%= form.label :order_id, class: "form-label" %>
            <%= form.collection_select(:order_id, Order.all, :id,:id, prompt: true,class:"form-control")%>
        </div>
    </div>
    <div class="col-3 ">
        <div class="form-group">
            <%= form.label :meal_id, class: "form-label" %>
            <%= form.text_field :meal_id, class: "form-control" %>
        </div>
    </div>
    <div class="col-2 offset-1">
        <div class="check">
            <%= form.submit 'Prosseguir',class: "btn btn-success"%>
        </div>
