<p id="notice"><%= notice %></p>

<div class="row">
    <div class="col-sm-8 offset-2">


        <table class="table table-bordered table-hover">

            <thead>
                <tr>
                    <th>Quantity</th>
                    <th>Order</th>
                    <th>Meal</th>
                    <th colspan="3">Ações</th>
                </tr>
            </thead>

            <tbody>
                <% @order_meals.each do |order_meal| %>
                <tr>
                    <td><%= order_meal.quantity %></td>
                    <td><%= order_meal.order.id %></td>
                    <td><%= order_meal.meal.name %></td>
                    <td><%= link_to 'Show', order_meal,class: "btn btn-secondary" %></td>
                    <td><%= link_to 'Edit', edit_order_meal_path(order_meal),class: "btn btn-warning" %></td>
                    <td><%= link_to 'Destroy', order_meal, method: :delete, data: { confirm: 'Nani?' }, class:"btn btn-danger" %></td>
                </tr>
                <% end %>
            </tbody>
        </table>

        <br>

        <%= link_to 'New Order Meal', new_order_meal_path ,class: "btn btn-success"%>

    </div>


</div>
