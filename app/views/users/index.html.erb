<div class="row">
<div class="col-10 offset-1">


    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>Password</th>
                <th>Admin</th>
                <th>Options</th>
            </tr>
        </thead>
        <tbody >
            <% @users.each do |user| %>
            <tr >
                <td> <%=user.id %> </td>
                <td>  <%=user.name %> </td>
                <td><%= user.email %> </td>
                <td><%= user.encrypted_password %> </td>
                <td><%= user.admin %> </td>
                <td><%= link_to 'Editar', user_registration_path(user.id),method: :edit, class:"btn btn-warning"%> <%= link_to "Excluir", user_registration_path(user.id), method: :delete, class:"btn btn-danger"%>  </td>
            </tr>
            <% end %>
        </tbody>
    </table>
    <%= link_to 'Novo User', new_user_registration_path,class: "btn btn-success"%>

</div>


</div>
