<p id="notice"><%= notice %></p>

<div class="row">
    <div class="col-sm-8 offset-2">


        <table class="table table-bordered table-hover">
            
                <thead>
                    <tr>
                        <th>Description</th>
                        <th colspan="3">Ações</th>
                    </tr>
                </thead>

                <tbody>
                    <% @situations.each do |situation| %>
                    <tr>
                        <td><%= situation.description %></td>
                        <td><%= link_to 'Show', situation,class: "btn btn-secondary" %></td>
                        <td><%= link_to 'Edit', edit_situation_path(situation),class: "btn btn-warning"  %></td>
                        <td><%= link_to 'Destroy', situation, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger"  %></td>
                    </tr>
                    <% end %>
                </tbody>
            </table>

            <br>

            <%= link_to 'New Situation', new_situation_path ,class: "btn btn-success"%>

        </div>


    </div>
