<div class="row">




        <%= form_for @category do |f| %>


          <p class="col-sm-5">
            <%= f.label :nome, class: "form-label" %><br>
            <%= f.text_field :name, autofocus: true, class: "form-control" %>
          </p>


          <p class="col-sm-5">
            <%= f.submit "Atualizar Categoria", class: "btn btn-success col-md-3"%>
            <%= link_to 'Voltar', categories_path, class: "btn btn-gray col-md-2" %>
          </p>
        <% end %>


</div>
