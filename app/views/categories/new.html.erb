<div class="row">




    <%= form_for @category do |f| %>


    <p class="col-sm-5">
        <%= f.label :nome, class: "form-label" %><br>
        <%= f.text_field :name, autofocus: true, class: "form-control" %>
    </p>


    <p class="col-6 col-offset-2">
        <%= f.submit "Nova Categoria", class: "btn btn-success col-sm-3"%>
        <%= link_to 'Voltar', categories_path, class: "btn btn-info col-sm-3" %>
    </p>


    <% end %>


</div>
