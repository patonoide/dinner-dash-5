<%= form_with(model: order, local: true) do |form| %>
<% if order.errors.any? %>
<div id="error_explanation">
    <h2><%= pluralize(order.errors.count, "error") %> prohibited this order from being saved:</h2>

    <ul>
        <% order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
    </ul>
</div>
<% end %>
<div class="row">
    <div class="col-3 offset-1">
        <div class="form-group">
            <div class="field">
                <%= form.label :price , class: "form-label" %>
                <%= form.number_field :price, class: "form-control" %>
            </div>
        </div>
    </div>
    <div class="col-2 ">
        <div class="form-group">
            <%= form.label :user_id , class: "form-label check" %>
            <%= form.collection_select(:user_id, User.all, :id,:name, prompt: true) %>
        </div>
    </div>
    <div class="col-3 ">
        <div class="form-group">
            <%= form.label :situation_id, class: "form-label check"  %>
            <%= form.collection_select(:stituation_id, Situation.all, :id,:description, prompt: true) %>
        </div>
    </div>
    <div class="col-2 offset-1">
        <div class="check">
            <%= form.submit 'Prosseguir',class: "btn btn-success"%>
        </div>
    </div>
</div>
<% end %>
